size = ...
os.loadAPI("move")

function digSquare(length)
	move.moveForward()
	move.moveDown()
	move.turnRight()

	digLine(math.floor(length, 2))
	move.turnRight()

	for i = 1, 3, 1 do
		digLine(length - 1)
		move.turnRight()
	end

	digLine(math.floor(length, 2))
	move.turnLeft()
end

function digLine(length)
	for i = 1, length, 1 do
		move.moveForward()
		turtle.digUp()
		turtle.digDown()
	end
end

function main()
	for i = 1, tonumber(size), 1 do
		digSquare(i * 2 + 1)
	end
	move.moveHome()
end

main()



